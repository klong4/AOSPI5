<?xml version="1.0" encoding="utf-8"?>
<!-- SystemUI Overlay for Raspberry Pi 5 -->
<resources>
    <!-- Enable status bar -->
    <bool name="config_enableFullscreenUserSwitcher">false</bool>

    <!-- Quick settings tiles -->
    <string name="quick_settings_tiles_default" translatable="false">wifi,bt,flashlight,rotation,battery,cell,airplane,cast,night,screenrecord</string>

    <!-- Show network speed in status bar -->
    <bool name="config_showActivity">true</bool>

    <!-- Battery percentage -->
    <bool name="config_showBatteryEstimate">false</bool>

    <!-- Volume panel location -->
    <integer name="volume_panel_gravity">80</integer>

    <!-- Rounded corners -->
    <dimen name="rounded_corner_radius">0dp</dimen>
    <dimen name="rounded_corner_radius_top">0dp</dimen>
    <dimen name="rounded_corner_radius_bottom">0dp</dimen>

    <!-- Keyboard shortcuts -->
    <bool name="config_showMenuShortcutsWhenKeyboardPresent">true</bool>

    <!-- Power menu -->
    <bool name="config_show_restart_in_power_menu">true</bool>

    <!-- Picture-in-picture -->
    <dimen name="pip_minimal_size">48dp</dimen>
</resources>
