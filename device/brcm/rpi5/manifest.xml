<?xml version="1.0" encoding="UTF-8"?>
<!-- Device HAL manifest for Raspberry Pi 5 - Android 16 (AIDL) -->
<manifest version="2.0" type="device" target-level="202404">
    <!-- Audio (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.audio.core</name>
        <version>2</version>
        <fqname>IModule/default</fqname>
        <fqname>IModule/usb</fqname>
        <fqname>IModule/bluetooth</fqname>
    </hal>
    <hal format="aidl">
        <name>android.hardware.audio.effect</name>
        <version>2</version>
        <fqname>IFactory/default</fqname>
    </hal>

    <!-- Bluetooth (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.bluetooth</name>
        <version>1</version>
        <fqname>IBluetoothHci/default</fqname>
    </hal>
    <hal format="aidl">
        <name>android.hardware.bluetooth.audio</name>
        <version>4</version>
        <fqname>IBluetoothAudioProviderFactory/default</fqname>
    </hal>

    <!-- Boot (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.boot</name>
        <version>1</version>
        <fqname>IBootControl/default</fqname>
    </hal>

    <!-- Camera (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.camera.provider</name>
        <version>2</version>
        <fqname>ICameraProvider/internal/0</fqname>
        <fqname>ICameraProvider/external/0</fqname>
    </hal>

    <!-- Composer/Graphics (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.graphics.allocator</name>
        <version>2</version>
        <fqname>IAllocator/default</fqname>
    </hal>
    <hal format="aidl">
        <name>android.hardware.graphics.composer3</name>
        <version>3</version>
        <fqname>IComposer/default</fqname>
    </hal>

    <!-- DRM (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.drm</name>
        <version>1</version>
        <fqname>IDrmFactory/default</fqname>
        <fqname>IDrmFactory/clearkey</fqname>
    </hal>


    <!-- Gatekeeper (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.gatekeeper</name>
        <version>1</version>
        <fqname>IGatekeeper/default</fqname>
    </hal>



    <!-- Keymint (replaces Keymaster in Android 16) -->
    <hal format="aidl">
        <name>android.hardware.security.keymint</name>
        <version>3</version>
        <fqname>IKeyMintDevice/default</fqname>
    </hal>
    <hal format="aidl">
        <name>android.hardware.security.sharedsecret</name>
        <version>1</version>
        <fqname>ISharedSecret/default</fqname>
    </hal>
    <hal format="aidl">
        <name>android.hardware.security.secureclock</name>
        <version>1</version>
        <fqname>ISecureClock/default</fqname>
    </hal>

    <!-- Light (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.light</name>
        <version>2</version>
        <fqname>ILights/default</fqname>
    </hal>



    <!-- Sensors (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.sensors</name>
        <version>2</version>
        <fqname>ISensors/default</fqname>
    </hal>

    <!-- Thermal (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.thermal</name>
        <version>2</version>
        <fqname>IThermal/default</fqname>
    </hal>

    <!-- USB (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.usb</name>
        <version>3</version>
        <fqname>IUsb/default</fqname>
    </hal>
    <hal format="aidl">
        <name>android.hardware.usb.gadget</name>
        <version>1</version>
        <fqname>IUsbGadget/default</fqname>
    </hal>

    <!-- WiFi (AIDL) -->
    <hal format="aidl">
        <name>android.hardware.wifi</name>
        <version>2</version>
        <fqname>IWifi/default</fqname>
    </hal>
    <hal format="aidl">
        <name>android.hardware.wifi.supplicant</name>
        <version>3</version>
        <fqname>ISupplicant/default</fqname>
    </hal>
    <hal format="aidl">
        <name>android.hardware.wifi.hostapd</name>
        <version>2</version>
        <fqname>IHostapd/default</fqname>
    </hal>

    <!-- Vibrator (AIDL - optional for Pi) -->
    <hal format="aidl">
        <name>android.hardware.vibrator</name>
        <version>2</version>
        <fqname>IVibrator/default</fqname>
    </hal>
</manifest>
