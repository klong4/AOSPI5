# GPIO device contexts
/dev/gpiochip[0-9]+                             u:object_r:gpio_device:s0
/dev/gpiomem                                    u:object_r:gpio_device:s0

# SPI devices
/dev/spidev[0-9]+\.[0-9]+                       u:object_r:spidev_device:s0

# I2C devices
/dev/i2c-[0-9]+                                 u:object_r:i2c_device:s0

# PWM devices
/sys/class/pwm(/.*)?                            u:object_r:sysfs_pwm:s0
/sys/devices/platform/[^/]+\.pwm(/.*)?          u:object_r:sysfs_pwm:s0

# DRM/GPU devices
/dev/dri/card[0-9]+                             u:object_r:dri_device:s0
/dev/dri/renderD[0-9]+                          u:object_r:dri_device:s0

# Video devices (V4L2)
/dev/video[0-9]+                                u:object_r:video_device:s0
/dev/v4l-subdev[0-9]+                           u:object_r:video_device:s0
/dev/media[0-9]+                                u:object_r:video_device:s0

# Thermal
/sys/class/thermal(/.*)?                        u:object_r:sysfs_thermal:s0
/sys/devices/virtual/thermal(/.*)?              u:object_r:sysfs_thermal:s0

# CPU frequency
/sys/devices/system/cpu(/.*)?                   u:object_r:sysfs_cpu:s0

# Fan/cooling
/sys/class/hwmon(/.*)?                          u:object_r:sysfs_hwmon:s0

# HAL executables
/vendor/bin/hw/android\.hardware\.gpio@1\.0-service\.rpi5          u:object_r:gpio_hal_exec:s0
/vendor/bin/hw/android\.hardware\.graphics\.composer@2\.4-service  u:object_r:drm_hwcomposer_exec:s0
/vendor/bin/hw/android\.hardware\.camera\.provider@2\.7-service\.rpi5  u:object_r:camera_hal_rpi_exec:s0
/vendor/bin/hw/android\.hardware\.thermal@2\.0-service\.rpi5       u:object_r:thermal_hal_rpi_exec:s0
/vendor/bin/hw/android\.hardware\.power@1\.3-service\.rpi5         u:object_r:power_hal_rpi_exec:s0

# Firmware
/vendor/firmware(/.*)?                          u:object_r:vendor_firmware_file:s0
