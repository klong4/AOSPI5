# Raspberry Pi 5 SELinux File Contexts
# Android 16 - AIDL HALs

# Device files
/dev/gpiochip[0-9]*              u:object_r:gpio_device:s0
/dev/gpiomem                     u:object_r:gpio_device:s0
/dev/i2c-[0-9]*                  u:object_r:i2c_device:s0
/dev/spidev[0-9]*\.[0-9]*        u:object_r:spidev_device:s0
/dev/ttyAMA[0-9]*                u:object_r:serial_device:s0
/dev/video[0-9]*                 u:object_r:video_device:s0
/dev/v4l-subdev[0-9]*            u:object_r:video_device:s0
/dev/media[0-9]*                 u:object_r:video_device:s0
/dev/dri/card[0-9]*              u:object_r:gpu_device:s0
/dev/dri/renderD[0-9]*           u:object_r:gpu_device:s0
/dev/fb[0-9]*                    u:object_r:fb_device:s0
/dev/input/event[0-9]*           u:object_r:input_device:s0
/dev/uinput                      u:object_r:uhid_device:s0

# Camera devices
/dev/bcm2835-isp                 u:object_r:bcm_isp_device:s0
/dev/bcm2835-codec               u:object_r:bcm_isp_device:s0
/dev/rpivid-.*                   u:object_r:video_device:s0

# PCIe NPU / AI Accelerator devices
/dev/apex_[0-9]*                 u:object_r:apex_device:s0
/dev/hailo[0-9]*                 u:object_r:hailo_device:s0
/dev/hailo_pci                   u:object_r:hailo_device:s0
/dev/myriad[0-9]*                u:object_r:usb_device:s0
/dev/kneron[0-9]*                u:object_r:pci_device:s0
/dev/accel[0-9]*                 u:object_r:pci_device:s0

# AIDL HAL executables (Android 16)
/vendor/bin/hw/android\.hardware\.gpio-service\.rpi5           u:object_r:hal_gpio_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.power-service\.rpi5          u:object_r:hal_power_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.thermal-service\.rpi5        u:object_r:hal_thermal_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.light-service\.rpi5          u:object_r:hal_light_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.usb-service\.rpi5            u:object_r:hal_usb_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.camera\.provider-service\.rpi5  u:object_r:hal_camera_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.audio\.core-service\.rpi5    u:object_r:hal_audio_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.graphics\.display-service\.rpi5  u:object_r:hal_display_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.input\.touch-service\.rpi5   u:object_r:hal_touch_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.npu-service\.rpi5            u:object_r:hal_npu_rpi5_exec:s0

# Legacy HIDL HAL executables (deprecated, kept for reference)
/vendor/bin/hw/android\.hardware\.gpio@1\.0-service\.rpi5      u:object_r:hal_gpio_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.power@1\.3-service\.rpi5     u:object_r:hal_power_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.thermal@2\.0-service\.rpi5   u:object_r:hal_thermal_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.light@2\.0-service\.rpi5     u:object_r:hal_light_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.usb@1\.3-service\.rpi5       u:object_r:hal_usb_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.camera\.provider@2\.7-service\.rpi5  u:object_r:hal_camera_rpi5_exec:s0
/vendor/bin/hw/android\.hardware\.audio\.service\.rpi5         u:object_r:hal_audio_rpi5_exec:s0

# Bluetooth
/vendor/bin/btattach             u:object_r:btattach_exec:s0

# Sysfs labels
/sys/class/gpio(/.*)?            u:object_r:sysfs_gpio:s0
/sys/class/leds(/.*)?            u:object_r:sysfs_leds:s0
/sys/class/backlight(/.*)?       u:object_r:sysfs_backlight:s0
/sys/class/thermal(/.*)?         u:object_r:sysfs_thermal:s0
/sys/class/udc(/.*)?             u:object_r:sysfs_usb:s0
/sys/class/typec(/.*)?           u:object_r:sysfs_usb:s0
/sys/devices/system/cpu(/.*)?    u:object_r:sysfs_cpu:s0
/sys/class/rfkill(/.*)?          u:object_r:sysfs_rfkill:s0
/sys/class/bluetooth(/.*)?       u:object_r:sysfs_bluetooth:s0
/sys/class/drm(/.*)?             u:object_r:sysfs_drm:s0
/sys/class/graphics(/.*)?        u:object_r:sysfs_graphics:s0
/sys/class/input(/.*)?           u:object_r:sysfs_input:s0
/sys/class/pwm(/.*)?             u:object_r:sysfs_pwm:s0

# Vendor configs
/vendor/etc/audio(/.*)?          u:object_r:vendor_configs_file:s0
/vendor/etc/thermal(/.*)?        u:object_r:vendor_configs_file:s0
/vendor/etc/wifi(/.*)?           u:object_r:vendor_configs_file:s0
/vendor/etc/bluetooth(/.*)?      u:object_r:vendor_configs_file:s0
/vendor/etc/camera(/.*)?         u:object_r:vendor_configs_file:s0
/vendor/etc/display(/.*)?        u:object_r:vendor_configs_file:s0
/vendor/etc/touch(/.*)?          u:object_r:vendor_configs_file:s0
/vendor/etc/npu(/.*)?            u:object_r:vendor_configs_file:s0

# NPU model files
/vendor/firmware/npu(/.*)?       u:object_r:vendor_npu_model_file:s0
/vendor/lib64/npu(/.*)?          u:object_r:vendor_npu_model_file:s0

# Data directories
/data/vendor/bluetooth(/.*)?     u:object_r:bluetooth_data_file:s0
/data/vendor/wifi(/.*)?          u:object_r:wifi_data_file:s0
/data/vendor/camera(/.*)?        u:object_r:camera_data_file:s0
/data/vendor/display(/.*)?       u:object_r:display_data_file:s0
/data/vendor/touch(/.*)?         u:object_r:touch_data_file:s0
/data/vendor/npu(/.*)?           u:object_r:npu_data_file:s0

# Firmware
/vendor/firmware(/.*)?           u:object_r:firmware_file:s0
/vendor/firmware/touch(/.*)?     u:object_r:firmware_file:s0

# Sysfs for PCIe devices
/sys/bus/pci(/.*)?               u:object_r:sysfs_pci:s0
/sys/class/pci_bus(/.*)?         u:object_r:sysfs_pci:s0
/sys/devices/platform/.*pcie.*/pci.*(/.*)?  u:object_r:sysfs_pci:s0

# Sysfs for video/camera devices
/sys/class/video4linux(/.*)?     u:object_r:sysfs_video:s0
/sys/class/media(/.*)?           u:object_r:sysfs_video:s0
