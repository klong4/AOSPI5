// Raspberry Pi 5 - Waveshare 7" DSI-C Display (1024x600)
// Device Tree Overlay for Waveshare 7" DSI-C
// Copyright (C) 2025 The Android Open Source Project

/dts-v1/;
/plugin/;

/ {
    compatible = "brcm,bcm2712";
    
    fragment@0 {
        target = <&dsi1>;
        __overlay__ {
            status = "okay";
            #address-cells = <1>;
            #size-cells = <0>;
            
            port {
                dsi1_out: endpoint {
                    remote-endpoint = <&panel_in>;
                };
            };
            
            panel: panel@0 {
                compatible = "waveshare,7inch-c-dsi-lcd";
                reg = <0>;
                
                width-mm = <154>;
                height-mm = <86>;
                
                panel-timing {
                    clock-frequency = <50000000>;
                    hactive = <1024>;
                    vactive = <600>;
                    hfront-porch = <100>;
                    hback-porch = <100>;
                    hsync-len = <100>;
                    vfront-porch = <10>;
                    vback-porch = <10>;
                    vsync-len = <2>;
                };
                
                port {
                    panel_in: endpoint {
                        remote-endpoint = <&dsi1_out>;
                    };
                };
            };
        };
    };
    
    fragment@1 {
        target = <&i2c1>;
        __overlay__ {
            status = "okay";
            #address-cells = <1>;
            #size-cells = <0>;
            
            gt911_7inch_c: gt911@14 {
                compatible = "goodix,gt911";
                reg = <0x14>;
                interrupt-parent = <&gpio>;
                interrupts = <4 2>;
                irq-gpios = <&gpio 4 0>;
                reset-gpios = <&gpio 17 0>;
                touchscreen-size-x = <1024>;
                touchscreen-size-y = <600>;
            };
        };
    };
};
