/dts-v1/;
/plugin/;

// ============================================================================
// Official Raspberry Pi 7" Touchscreen Display
// ============================================================================
/ {
    compatible = "brcm,bcm2712";
    
    fragment@0 {
        target = <&dsi1>;
        __overlay__ {
            status = "okay";
            #address-cells = <1>;
            #size-cells = <0>;
            
            port {
                dsi1_out: endpoint {
                    remote-endpoint = <&panel_in>;
                };
            };
            
            panel: panel@0 {
                compatible = "raspberrypi,7inch-touchscreen-panel";
                reg = <0>;
                
                port {
                    panel_in: endpoint {
                        remote-endpoint = <&dsi1_out>;
                    };
                };
            };
        };
    };
    
    fragment@1 {
        target = <&i2c_csi_dsi>;
        __overlay__ {
            status = "okay";
            #address-cells = <1>;
            #size-cells = <0>;
            
            ft5406: ft5406@38 {
                compatible = "focaltech,ft5406";
                reg = <0x38>;
                touchscreen-size-x = <800>;
                touchscreen-size-y = <480>;
            };
            
            reg_bridge: reg_bridge@45 {
                compatible = "raspberrypi,touchscreen-ts-bridge";
                reg = <0x45>;
            };
        };
    };
};
